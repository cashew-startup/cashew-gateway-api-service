{
  "name": "auth microservice",
  "gateway": {
    "address": "localhost",
    "port": "8080"
  },
  "microservice": {
    "address": "localhost",
    "port": "8081"
  },
  "endpoints": [
    {
      "gateway_endpoint": "/api/auth/v1/register",
      "microservice_endpoint": "/api/auth/register",
      "auth_required": false
    },
    {
      "gateway_endpoint": "/api/auth/v1/login",
      "microservice_endpoint": "/api/auth/login",
      "auth_required": false
    },
    {
      "gateway_endpoint": "/api/auth/v1/refresh",
      "microservice_endpoint": "/api/auth/token/refresh",
      "auth_required": false
    },
    {
      "gateway_endpoint": "/api/auth/v1/validate",
      "microservice_endpoint": "/api/auth/token/validate",
      "auth_required": false
    }
  ]
}
